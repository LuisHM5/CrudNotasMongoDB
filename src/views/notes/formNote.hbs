<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header pb-4 pt-4 d-flex justify-content-center align-items-center">
      <h3>New Note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="post">
        <div class="mb-3">
          <input type="text" name="title" placeholder="Title" class="form-control" autofocus />
        </div>
        <div class="mb-3">
          <textarea type="text" name="description" placeholder="Description" class="form-control"></textarea>
        </div>
        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-primary">
            Save
          </button>
        </div>

      </form>
    </div>

  </div>
</div>