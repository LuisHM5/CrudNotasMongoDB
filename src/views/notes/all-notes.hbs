<h1>all notes</h1>
<div class="row">
  {{#each notes}}
    <div class="col-sm mb-5 pb-6">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title d-flex justify-content-between align-items-center">{{title}}
            <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
          </h4>
          <p>{{description}}</p>
          <form action="/notes/delete/{{_id}}?_method=DELETE" method="post">
            <div class="d-grid gap-2 gap-2 mt-10 mb-2">
              <input type="hidden" name="_method" value="DELETE" />
              <button type="submit" class="btn btn-danger p-2">Delete</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  {{/each}}
</div>